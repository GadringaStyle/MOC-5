<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.example.canteenchecker.adminapp.ui.viewmodels.OverviewViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mcvFacilityData"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/mtcFacilityData"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/facility_data_header"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp" />

                    <GridLayout
                        android:id="@+id/grdFacilityData"
                        app:layout_constraintTop_toBottomOf="@+id/mtcFacilityData"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="4"
                        android:columnCount="2">

                        <TextView
                            android:id="@+id/txvCanteenName"
                            android:labelFor="@+id/edtCanteenName"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:text="@string/lbl_canteen_name"/>

                        <EditText
                            android:padding="@dimen/margin_medium"
                            android:id="@+id/edtCanteenName"
                            android:importantForAutofill="no"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:text="@{viewModel.canteenDetails.component1()}"
                            android:inputType="text"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="2"/>

                        <TextView
                            android:id="@+id/txvCanteenAddress"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:labelFor="@+id/edtCanteenAddress"
                            android:text="@string/lbl_canteen_address"/>

                        <EditText
                            android:padding="@dimen/margin_medium"
                            android:id="@+id/edtCanteenAddress"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text="@{viewModel.canteenDetails.component2()}"
                            android:importantForAutofill="no"
                            android:inputType="textPostalAddress"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="2"/>

                        <TextView
                            android:id="@+id/txvCanteenWebsite"
                            android:layout_row="2"
                            android:labelFor="@id/edtCanteenWebsite"
                            android:layout_column="0"
                            android:text="@string/lbl_canteen_website"/>

                        <EditText
                            android:padding="@dimen/margin_medium"
                            android:id="@+id/edtCanteenWebsite"
                            android:layout_row="2"
                            android:text="@{viewModel.canteenDetails.component4()}"
                            android:importantForAutofill="no"
                            android:layout_column="1"
                            android:inputType="textWebEditText"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="2"/>

                        <TextView
                            android:id="@+id/txvCanteenPhone"
                            android:layout_row="3"
                            android:layout_column="0"
                            android:labelFor="@+id/edtCanteenPhone"
                            android:text="@string/lbl_canteen_phone"/>

                        <EditText
                            android:padding="@dimen/margin_medium"
                            android:id="@+id/edtCanteenPhone"
                            android:layout_row="3"
                            android:layout_column="1"
                            android:text="@{viewModel.canteenDetails.component3()}"
                            android:importantForAutofill="no"
                            android:inputType="phone"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="2"/>
                    </GridLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/mtcCurrentDish"
                        app:layout_constraintTop_toTopOf="@id/mtcCurrentDish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/current_dish_header"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp" />

                    <GridLayout
                        app:layout_constraintTop_toBottomOf="@+id/mtcCurrentDish"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rowCount="2"
                        android:columnCount="2">

                        <TextView
                            android:id="@+id/txvDishName"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:labelFor="@id/edtDishName"
                            android:text="@string/lbl_dish_name"/>

                        <EditText
                            android:id="@+id/edtDishName"
                            android:layout_row="0"
                            android:layout_column="1"
                            android:layout_width="0dp"
                            android:inputType="text"
                            android:text="@{viewModel.canteenDetails.component5()}"
                            android:importantForAutofill="no"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/margin_medium"
                            android:layout_columnWeight="2"/>

                        <TextView
                            android:id="@+id/txvDishPrice"
                            android:layout_row="1"
                            android:layout_column="0"
                            android:labelFor="@+id/edtDishPrice"
                            android:text="@string/lbl_dish_price"/>

                        <com.example.canteenchecker.adminapp.misc.EditTextWithSuffix
                            android:padding="@dimen/margin_medium"
                            android:id="@+id/edtDishPrice"
                            android:importantForAutofill="no"
                            android:layout_row="1"
                            android:layout_column="1"
                            android:text='@{String.format("%.2f", viewModel.canteenDetails.component6())}'
                            android:layout_width="0dp"
                            app:suffix="@string/suffix_euro"
                            android:inputType="numberDecimal"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="2"/>
                    </GridLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/mtcWaitingTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/mtcWaitingTime"
                        android:text="@string/current_waiting_time_header"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:paddingBottom="8dp" />

                    <GridLayout
                        app:layout_constraintTop_toBottomOf="@+id/mtcWaitingTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2">

                        <TextView
                            android:id="@+id/txvWaitingTime"
                            android:layout_row="0"
                            android:layout_column="0"
                            android:labelFor="@id/edtWaitingTime"
                            android:text="@string/lbl_waiting_time_in_minutes"/>

                        <com.example.canteenchecker.adminapp.misc.EditTextWithSuffix
                            android:padding="@dimen/margin_medium"
                            android:importantForAutofill="no"
                            android:id="@+id/edtWaitingTime"
                            android:layout_row="0"
                            app:suffix="@string/suffix_minutes"
                            android:text='@{"" + viewModel.canteenDetails.component7()}'
                            app:suffixPadding="5dp"
                            android:layout_column="1"
                            android:layout_width="0dp"
                            android:inputType="number"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="2"/>
                    </GridLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/img_save"
            android:contentDescription="update canteen details"
            app:tint="@android:color/white"
            android:layout_gravity="bottom|end" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>